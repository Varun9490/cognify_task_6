<%- include('layout', { title: 'Login', body: `
<div class="fade-in max-w-md mx-auto p-4 bg-gray-800 rounded shadow-lg">
  <h2 class="text-2xl font-bold mb-4">Login</h2>
  <% if (message.length > 0) { %>
  <div class="alert alert-error">
    <% message.forEach(function(msg) { %>
    <p><%= msg %></p>
    <% }); %>
  </div>
  <% } %>
  <form action="/login" method="post">
    <div class="mb-4">
      <label for="username" class="block text-lg">Username</label>
      <input
        type="text"
        id="username"
        name="username"
        class="w-full p-2 mt-1 bg-gray-700 border border-gray-600 rounded"
        required
      />
    </div>
    <div class="mb-4">
      <label for="password" class="block text-lg">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="w-full p-2 mt-1 bg-gray-700 border border-gray-600 rounded"
        required
      />
    </div>
    <button
      type="submit"
      class="w-full py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded"
    >
      Login
    </button>
  </form>
</div>
` }) %>
